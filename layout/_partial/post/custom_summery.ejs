<!-- this file is used in /layout/index.ejs , class_name=custom_summery ,  defined in file /source/css/_partial/custom_summery.styl-->

<% if (index) { %>
    <% if (post.summery) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>" target="_blank" itemprop="url"><%- truncate(strip_html(post.summery), {length: 160}) %></a>
    <% } %>
<% } %>

