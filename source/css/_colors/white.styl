//java 注释颜色(绿色)
$color-java-comment = #65865b

//不同的黑色
$color-black-1 = #333333;
$color-black-2 = #2f2f2f;

//不同的红色
$color-red-1 = #f97352

//不同的灰色
$color-gray-1 = #e9e9e9
$color-gray-2 = #f5f5f5
$color-gray-3 = #dddddd

//导航栏：绿色
$color-nav-normal = #2bbc8a
