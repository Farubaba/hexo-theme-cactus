//android developer 标题(灰色)
$color-android-title-first = #757575

//java keywords 关键字颜色（土黄色）
$color-java-keywords = #BC7739
//java methods 方法颜色（浅黄色）
$color-java-methods = #FEC574
//java 常量名称颜色(紫色)
$color-java-const = #9777a9
//java 代码颜色（灰白色）
